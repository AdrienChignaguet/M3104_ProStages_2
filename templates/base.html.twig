<!DOCTYPE html>
<html>
    <head>
        <!-- meta tag obligatoires -->
        <meta charset="UTF-8">

        <!-- Titre de la page -->
        <title>
            {% block title %}
                Prostages
            {% endblock %}
        </title>

        <!-- Feuilles de styles (CSS & JavaScript) -->
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <!--Lien Bootstrap -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <!--Lien Bootstrap -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <!-- En-tÃªte avec le logo et le titre-->
        {% block header %}
        <h1>
            <center>
                <a href="{{path('prostages_accueil')}}"> Prostages </a>
            </center>
        </h1>
        {% endblock %}

        <!-- Menu de navigation -->
        {% block nav %}
        <center>
        <div class="container">
            <div class ="col-10">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="col">
                        <!-- Permettre de filtrer par entreprises -->
                        <a href="{{path('prostages_entreprises')}}"> Filtrer par entreprises </a>
                    </div>
                    <div class ="col">
                        <!-- Permettre de filtrer par formations -->
                        <a href="{{path('prostages_formations')}}"> Filtrer par formations </a>
                    </div> 
                </nav>
            </div>
        </div>
        </center>
        {% endblock %}

        <!-- Bloc contenu de la page-->
        <center>
            <div class="container">
                <div class="col-10">
                    {% block contenuBody %}
                    {% endblock %}
                </div>
            </div>
        <center>
        <!-- Pied de page -->
        {% block footer %}
        {% endblock %}
    </body>
</html>
